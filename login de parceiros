    <script>
        const textArea = document.getElementById("textArea");
        const suggestionsDiv = document.getElementById("suggestions");
        
        // Lista de sugestões (substitua isso com suas próprias sugestões)
       

        textArea.addEventListener("input", function () {
            const text = textArea.value.toLowerCase();
            const filteredSuggestions = suggestionsList.filter(suggestion => suggestion.toLowerCase().includes(text));
            
            if (text.length === 0) {
                suggestionsDiv.style.display = "BLOCK";
            } else {
                suggestionsDiv.style.display = "block";
                suggestionsDiv.innerHTML = "<ul>" + filteredSuggestions.map(suggestion => `<li>${suggestion}</li>`).join("") + "</ul>";
            }
        });

        suggestionsDiv.addEventListener("click", function (event) {
            if (event.target.tagName === "LI") {
                textArea.value = event.target.textContent;
                suggestionsDiv.style.display = "none";
            }
        });
    </script>
